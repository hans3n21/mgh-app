// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum OrderType {
  GUITAR
  BODY
  NECK
  REPAIR
  PICKGUARD
  PICKUPS
  ENGRAVING
  FINISH_ONLY
}

enum OrderStatus {
  intake
  quote
  in_progress
  finishing
  setup
  awaiting_customer
  complete
  design_review
}

enum Role {
  admin
  staff
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(staff)
  createdAt    DateTime @default(now())
  orders       Order[]  @relation("UserOrders")
  messages     Message[]
  procurementItems ProcurementItem[]

  // NextAuth
  accounts Account[]
  sessions Session[]
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  createdAt DateTime @default(now())
  orders    Order[]
}

model Order {
  id         String      @id // we use human IDs like ORD-2025-001
  title      String
  type       OrderType
  status     OrderStatus @default(intake)
  createdAt  DateTime    @default(now())
  customerId String
  customer   Customer    @relation(fields: [customerId], references: [id], onDelete: Cascade)
  assigneeId String?
  assignee   User?       @relation("UserOrders", fields: [assigneeId], references: [id])
  specs      OrderSpecKV[]
  images     OrderImage[]
  items      OrderItem[]
  messages   Message[]
  wcOrderId  String?
  // Abrechnung
  finalAmountCents Int?
  paymentStatus    String   @default("open") // open | deposit | paid
  extras           OrderExtra[]
}

model OrderSpecKV {
  id      String @id @default(cuid())
  orderId String
  key     String
  value   String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model OrderImage {
  id        String   @id @default(cuid())
  orderId   String
  path      String // file path or URL
  comment   String?
  position  Int      @default(0)
  attach    Boolean  @default(false)
  scope     String?  // categorization: body, neck, finish, repair, pickguard, pickups, engraving
  fieldKey  String?  // optional link to specific field
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model Message {
  id         String   @id @default(cuid())
  orderId    String
  senderId   String? // if staff: userId; if customer: null and senderType=customer
  senderType String   @default("staff") // "staff" | "customer"
  body       String
  createdAt  DateTime @default(now())
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  sender     User?    @relation(fields: [senderId], references: [id])
}

model PriceItem {
  id           String  @id @default(cuid())
  category     String
  label        String
  description  String?
  unit         String?
  price        Int?
  min          Int?
  max          Int?
  priceText    String?
  mainCategory String?
  active       Boolean @default(true)
  orderItems   OrderItem[]
}

model OrderItem {
  id          String     @id @default(cuid())
  orderId     String
  priceItemId String?
  label       String
  qty         Int        @default(1)
  unitPrice   Int        @default(0)
  total       Int        @default(0)
  notes       String?
  order       Order      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  priceItem   PriceItem? @relation(fields: [priceItemId], references: [id])

  @@index([orderId])
}

model OrderExtra {
  id           String   @id @default(cuid())
  orderId      String
  label        String
  amountCents  Int
  createdAt    DateTime @default(now())
  order        Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model ProcurementItem {
  id          String    @id @default(cuid())
  name        String
  qty         Int       @default(1)
  unit        String?   @default("Stk")
  status      String    @default("offen") // offen|bestellt|archiviert
  neededBy    DateTime?
  note        String?
  orderId     String?
  createdBy   String?   // User ID who created this item
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  archivedAt  DateTime? // When item was archived
  creator     User?     @relation(fields: [createdBy], references: [id])
}

/// NextAuth models (Prisma Adapter)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
