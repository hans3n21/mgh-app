// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderType {
  GUITAR
  BODY
  NECK
  REPAIR
  PICKGUARD
  PICKUPS
  ENGRAVING
  FINISH_ONLY
}

enum OrderStatus {
  intake
  quote
  in_progress
  finishing
  setup
  awaiting_customer
  complete
  design_review
}

enum Role {
  admin
  staff
}

model User {
  id               String            @id @default(cuid())
  name             String
  email            String            @unique
  passwordHash     String
  role             Role              @default(staff)
  createdAt        DateTime          @default(now())
  orders           Order[]           @relation("UserOrders")
  messages         Message[]
  procurementItems ProcurementItem[]

  // NextAuth
  accounts Account[]
  sessions Session[]
  
  // Mail System
  mailAccounts MailAccount[]
  sentMails    Mail[]        @relation("UserSentMails")
}

model Customer {
  id           String   @id @default(cuid())
  name         String
  email        String?
  phone        String?
  // Address fields
  addressLine1 String?
  postalCode   String?
  city         String?
  country      String?  @default("DE")
  createdAt    DateTime @default(now())
  orders       Order[]
  mails        Mail[]
}

model Order {
  id               String        @id // we use human IDs like ORD-2025-001
  title            String
  type             OrderType
  status           OrderStatus   @default(intake)
  createdAt        DateTime      @default(now())
  customerId       String
  customer         Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)
  assigneeId       String?
  assignee         User?         @relation("UserOrders", fields: [assigneeId], references: [id])
  specs            OrderSpecKV[]
  images           OrderImage[]
  items            OrderItem[]
  messages         Message[]
  wcOrderId        String?
  // Abrechnung
  finalAmountCents Int?
  paymentStatus    String        @default("open") // open | deposit | paid
  extras           OrderExtra[]
  mails            Mail[]
  datasheets       Datasheet[]
}

model OrderSpecKV {
  id      String @id @default(cuid())
  orderId String
  key     String
  value   String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model OrderImage {
  id        String   @id @default(cuid())
  orderId   String
  path      String // file path or URL
  comment   String?
  position  Int      @default(0)
  attach    Boolean  @default(false)
  scope     String? // categorization: body, neck, finish, repair, pickguard, pickups, engraving
  fieldKey  String? // optional link to specific field
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model Message {
  id         String   @id @default(cuid())
  orderId    String
  senderId   String? // if staff: userId; if customer: null and senderType=customer
  senderType String   @default("staff") // "staff" | "customer"
  body       String
  createdAt  DateTime @default(now())
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  sender     User?    @relation(fields: [senderId], references: [id])
}

model PriceItem {
  id           String      @id @default(cuid())
  category     String
  label        String
  description  String?
  unit         String?
  price        Int?
  min          Int?
  max          Int?
  priceText    String?
  mainCategory String?
  active       Boolean     @default(true)
  orderItems   OrderItem[]
}

model OrderItem {
  id          String     @id @default(cuid())
  orderId     String
  priceItemId String?
  label       String
  qty         Int        @default(1)
  unitPrice   Int        @default(0)
  total       Int        @default(0)
  notes       String?
  order       Order      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  priceItem   PriceItem? @relation(fields: [priceItemId], references: [id])

  @@index([orderId])
}

model OrderExtra {
  id          String   @id @default(cuid())
  orderId     String
  label       String
  amountCents Int
  createdAt   DateTime @default(now())
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model ProcurementItem {
  id         String    @id @default(cuid())
  name       String
  qty        Int       @default(1)
  unit       String?   @default("Stk")
  status     String    @default("offen") // offen|bestellt|archiviert
  neededBy   DateTime?
  note       String?
  link       String?
  orderId    String?
  createdBy  String? // User ID who created this item
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  archivedAt DateTime? // When item was archived
  creator    User?     @relation(fields: [createdBy], references: [id])
}

/// NextAuth models (Prisma Adapter)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model MailAccount {
  id        String   @id @default(cuid())
  name      String   // e.g. "Support"
  email     String   @unique
  
  // Configuration
  imapHost  String
  imapPort  Int      @default(993)
  imapUser  String
  imapPass  String   
  smtpHost  String
  smtpPort  Int      @default(587)
  smtpUser  String
  smtpPass  String
  
  // State
  isDefault Boolean  @default(false)
  isActive  Boolean  @default(true)
  
  mails     Mail[]
  // Optional: Link to specific staff user
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mail {
  id             String       @id @default(cuid())
  messageId      String       @unique
  threadId       String?      // Root message ID for conversation grouping
  
  // Multi-Account Context
  accountId      String
  account        MailAccount  @relation(fields: [accountId], references: [id])

  // IMAP State
  uid            Int          
  folder         String       // "INBOX", "TRASH", "Sent", "Drafts"
  
  // Content
  subject        String?
  fromEmail      String
  fromName       String?
  to             Json         // Array of strings
  cc             Json?
  bcc            Json?
  text           String?      @db.Text
  html           String?      @db.Text
  snippet        String?
  
  // Metadata
  date           DateTime
  inReplyTo      String?
  references     Json?        
  
  // Associations
  orderId        String?
  order          Order?       @relation(fields: [orderId], references: [id])
  customerId     String?
  customer       Customer?    @relation(fields: [customerId], references: [id])
  senderId       String?      // Staff member who sent this
  sender         User?        @relation("UserSentMails", fields: [senderId], references: [id])

  attachments    Attachment[]
  
  isRead         Boolean      @default(false)
  isDeleted      Boolean      @default(false)

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  // Performance Indices
  @@index([accountId])
  @@index([orderId])
  @@index([folder])
  @@index([threadId])
  @@index([customerId])
  @@index([fromEmail])
  @@index([date])
}

model Attachment {
  id          String   @id @default(cuid())
  mailId      String
  mail        Mail     @relation(fields: [mailId], references: [id], onDelete: Cascade)
  filename    String
  mimeType    String?
  size        Int
  path        String   // e.g. "2025/11/uuid-file.jpg"
  cid         String?  // Content-ID for inline images
  
  createdAt   DateTime @default(now())
}

model SystemSetting {
  key   String @id
  value String // JSON value
}

model Datasheet {
  id        String   @id @default(cuid())
  orderId   String
  type      String
  fields    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  version   Int      @default(1)
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model Feedback {
  id        String   @id @default(cuid())
  message   String
  page      String
  url       String
  timestamp DateTime
  userAgent String?
  resolved  Boolean  @default(false)
  resolvedBy String?
  resolvedAt DateTime?
  createdAt DateTime @default(now())
  
  @@index([resolved])
  @@index([createdAt])
}

model ReplyTemplate {
  id        String   @id @default(cuid())
  key       String   @unique
  lang      String   @default("de")
  subject   String?
  body      String
  variables Json?    // Array von Variablen-Namen f√ºr Template-Platzhalter
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([lang])
  @@index([key])
}
